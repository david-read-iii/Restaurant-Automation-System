<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- AppTheme styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- TextView formatting styles -->
    <style name="TextView.Label" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="TextView.PrimaryListViewText" parent="@android:style/TextAppearance.Medium" />

    <style name="TextView.SecondaryListViewText" parent="@android:style/TextAppearance.Small" />

    <style name="TextView.EmptyListViewText" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TextView.PrimaryDrawerHeaderText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="TextView.SecondaryDrawerHeaderText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <!-- Spinner formatting styles -->
    <style name="Spinner.Default" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingTop">@dimen/spinner_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/spinner_vertical_padding</item>
    </style>

</resources>