<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_main_drawer_header_height"
    android:background="@color/color_primary"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_main_drawer_header_linear_layout_horizontal_margin"
        android:layout_marginTop="@dimen/activity_main_drawer_header_linear_layout_vertical_margin"
        android:layout_marginBottom="@dimen/activity_main_drawer_header_linear_layout_vertical_margin"
        android:orientation="vertical">

        <TextView
            style="@style/DrawerHeader.TextView.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karen Smith" />

        <TextView
            style="@style/DrawerHeader.TextView.Position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager" />

    </LinearLayout>

</LinearLayout>